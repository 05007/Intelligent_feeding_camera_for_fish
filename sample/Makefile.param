ifneq (,$(filter $(SENSOR0_TYPE), SONY_IMX415_MIPI_8M_30FPS_12BIT SONY_IMX415_MIPI_8M_60FPS_12BIT SONY_IMX415_MIPI_8M_30FPS_12BIT_WDR2TO1))
